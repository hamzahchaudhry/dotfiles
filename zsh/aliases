# Simple ls aliases
alias ls='sudo lsd'
alias l='sudo lsd -l'
alias ll='sudo ls -lah'
alias la='sudo ls -a'
alias lt='sudo ls --tree --all'

# SSH
alias ece='ssh ece'
alias ece1='ssh ece1'
alias ece2='ssh ece2'
alias ece3='ssh ece3'
alias ece4='ssh ece4'
alias cpsc='ssh cpsc'

# Pacman helpers
alias removelist='pacman -Qqd | pacman -Rsu --print -'
alias remove='pacman -Qqd | sudo pacman -Rsu -'

# Security tools
clam-scan-once() {
  sudo systemctl start clamav-daemon.socket clamav-daemon.service
  sudo clamdscan --multiscan --fdpass "$@"
  sudo systemctl stop clamav-daemon.socket clamav-daemon.service
}
alias scanrkhunter='sudo rkhunter --update && sudo rkhunter --propupd && sudo rkhunter --check --sk'
alias scanaide='sudo aide --check'

# Docker OS161
alias startos161='sudo systemctl start docker && sudo docker run --network host -dit --mount type=bind,src=/home/hamzah/Documents/classes/cpen331/assignments/OS_BASE,target=/root/os161 --rm --name os161 os161 && sudo docker exec -it os161 /bin/bash'
alias os161='sudo docker exec -it os161 /bin/bash'
alias killos161='sudo docker kill $(sudo docker ps -q --filter "name=os161") && sudo systemctl stop docker.socket && sudo systemctl stop docker'

