# Simple ls aliases
alias ls='sudo eza --color=always --group-directories-first --icons'
alias l='sudo eza -l --icons --octal-permissions --group-directories-first'
alias ll='sudo eza -la --icons --octal-permissions --group-directories-first --git'
alias la='sudo eza --all --color=always --group-directories-first --icons'
alias lt='sudo eza --all --tree --level=2 --color=always --group-directories-first --icons'
alias ltt='sudo eza --all --tree --color=always --group-directories-first --icons'

# Git aliases
alias gs='git status'
alias gc='git clone'
alias ga='git add'
alias gu='git restore --staged'

# SSH
alias ece='ssh ece'
alias ece1='ssh ece1'
alias ece2='ssh ece2'
alias ece3='ssh ece3'
alias ece4='ssh ece4'
alias cpsc='ssh cpsc'

# Pacman helpers
alias remove='pacman -Qqd | sudo pacman -Rsu -'

# Security tools
clam-scan-once() {
  sudo systemctl start clamav-daemon.socket clamav-daemon.service
  sudo clamdscan --multiscan --fdpass "$@"
  sudo systemctl stop clamav-daemon.socket clamav-daemon.service
}
alias scanrkhunter='sudo rkhunter --update && sudo rkhunter --propupd && sudo rkhunter --check --sk'
alias scanaide='sudo aide --check'

# Docker OS161
alias startos161='sudo systemctl start docker && sudo docker run -dit --mount type=bind,src=/home/hamzah/Documents/classes/cpen331/OS_BASE,target=/root/os161 --rm --name os161 os161 && sudo docker exec -it os161 /bin/bash'
alias os161='sudo docker exec -it os161 /bin/bash'
alias killos161='sudo docker kill $(sudo docker ps -q --filter "name=os161") && sudo systemctl stop docker.socket && sudo systemctl stop docker'

